{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": ["packages"],
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
